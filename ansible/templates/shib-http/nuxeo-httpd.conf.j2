{% extends "httpd.conf.j2" %}

{% block appstrap %}
<Location /secure>
  AuthType shibboleth
  ShibRequestSetting requireSession 1
  Include {{ role_home_dir.stdout }}/users/users.httpd.txt
</Location>

ProxyPass /{{ ansible_user_id }} ajp://{{ ansible_default_ipv4.address }}:8009/{{ ansible_user_id }}
<Location "/{{ ansible_user_id }}">
        AuthType shibboleth
        ShibRequestSetting requireSession 1
        ShibUseHeaders On
        require valid-user
</Location>

Redirect / https://wiki.library.ucsf.edu/display/UCLDC/UCLDC+Implementation

{% endblock %}
